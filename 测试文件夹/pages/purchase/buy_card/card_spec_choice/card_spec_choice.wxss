@import "/pages/public/loading.wxss";
@import "../../../../utils/loginManager/loginMgr.wxss";

.view_card_header {
  display: flex;
  flex-direction: column;
  margin-top: 24px;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.txt_name {
  font-size: 20px;
  font-weight: 500;
  color: #333;
  padding-bottom: 10px;
}

.txt_detail {
  font-size: 14px;
  color: #999;
  padding-bottom: 20px;
}

/* 购物车 */
.view_cart {
  width: 100%;
  height: 59px;
  position: fixed;
  z-index: 999;
  bottom: 0px;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  border-top: 1px solid #EFEFEF;
}

.cart_left {
  width: 50%;
  display: flex;
}

.cart_right {
  width: 50%;
}

.txt_amount_header {
  font-size: 16px;
  display: inline-block;
  margin-left: 15px;
  font-weight: 500;
  color: #666666;
}

.txt_amount {
  font-size: 16px;
  text-align: end;
  color: #DD4D4E;
  font-weight: 500;
}

.btn_buy {
  width: 160px;
  height: 40px;
  background-color: #444444;
  border-radius: 20px;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: 500;
}

/*规格选择器*/
.view_card_column {
  display: flex;
  flex-direction: column;
  margin: 20px 30rpx 70px 30rpx;
}

.view_card_column .view_container_column {
  width: 220px;
  position: relative;
  height: 139px;
  overflow: hidden;
  background-color: #d8d8d8;
  margin: 0 auto;
  border-radius: 10px;
}

.img_card{
   width: 220px;
   height: 139px;
}

.view_spec_choice_headTxt {
  display: flex;
  flex-direction: column;
}

.txt_spec_choice_headTxt {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-top: 20px;
}

.view_card_column .txt_card_price_column.disable {
  color: #999;
}

/* 价格和数量 */

.view_card_price {
  display: flex;
  align-items: center;
  height: 50px;
  margin-top: 20px;
  background-color: #f8f8f8;
  border-radius: 10px;
}

.view_card_price .txt_card_price.disable {
  color: #999;
}

.view_card_price .txt_spec {
  font-size: 16px;
  position: absolute;
  left: 60rpx;
  color: #666;
}

.view_card_price .txt_price {
  font-weight: 500;
  font-size: 16px;
  position: absolute;
  left: 375rpx;
  color: #DD4D4E;
}


.view_card_price .view_count {
  position: absolute;
  right: 60rpx;
  display: flex;
}

.view_card_price .view_count .txt_count_sale_out{
  font-size: 18px;
  color: #666;
}

.view_card_price .view_calculate {
  width: 26px;
  height: 26px;
  background-color: #434343;
  font-size: 26px;
  line-height: 22px;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  margin-top: 4.5px;
}

.view_card_price .view_calculate.disabled {
  background-color: #d5d5d5;
}

.view_card_price .view_sel_count {
  width: 60rpx;
  height: 35px;
  color: #333;
  font-size: 18px;
  line-height: 35px;
  text-align: center;
  margin-left: 4px;
  margin-right: 4px;
}

.view_card_price .view_sel_count.disabled {
  color: #999;
}

