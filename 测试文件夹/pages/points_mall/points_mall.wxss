/* pages/points_mall/points_mall.wxss */
@import "../public/loading.wxss";
@import "../../utils/loginManager/loginMgr.wxss";

page {
  background-color: #f2f2f2;
}

/* loading */
.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

.list_container {
  margin-top: 0;
  display: flex;
  flex-direction: column;
}

.list_containerTop {
  margin-top: 20px;
}
/* 积分规则 */
.view_points_rules_container {
  height: 80rpx;
  margin: 0 40rpx;
}

.view_points_rules_container .view_points_rules {
  float: right;
}

.view_points_rules_container .view_points_rules .txt_points_rules {
  font-size: 12px;
  color: #999999;
}

.view_points_rules_container .view_points_rules .img_points_rules {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
  margin-top: 24rpx;
}

/* 用户信息 */
.view_user_info {
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  height: 160rpx;
  display: flex;
}

/* 积分 */
.view_user_info .view_left {
  width: 50%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 竖向分割线 */
.view_user_info .view_separator {
  margin-top: 20rpx;
  height: 120rpx;
  border-right: 1px solid #f5f5f5;
}

/* 兑换记录 */
.view_user_info .view_right {
  width: 50%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 图标 */
.view_user_info .img_icon {
  width: 72rpx;
  height: 72rpx;
  margin-top: 24rpx;
}

/* 文字 */
.view_user_info .txt_user_info {
  font-size: 14px;
  color: #666666;
}

/* banner */
.main_swiper {
  margin-top: 15px;
  margin-bottom: 20px;
  align-self: center;
  width: 690rpx;
  height: 300rpx;
  border-radius: 20rpx;
}

/* 商品 */
.view_list {
  display: flex;
  flex-direction: column;
}
.view_goods {
  margin:0 30rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
  padding: 20rpx;
}

/* 图 */
.view_goods .img_goods {
  float: left;
  width: 240rpx;
  height: 240rpx;
  position: relative;
  overflow: hidden;
  margin-right: 10px;
  border-radius: 10px;
  background-color: #F8F8F8;
}

/* 商品信息 */
.view_goods .view_goods_info {
  display: block;
}

/* 商品标题 */
.view_goods .view_goods_info .txt_title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 商品价格 */
.view_goods .view_goods_info .txt_price {
  font-size: 16px;
  font-weight: 500;
  color: #dd4d4e;
}

/* 商品单位 */
.view_goods .view_goods_info .txt_unit {
  font-size: 12px;
  font-weight: 500;
  color: #dd4d4e;
}

/* 兑换按钮 */
.view_goods .view_goods_info .btn_exchange {
  width: 80px;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  border-radius: 15px;
  color: #ffffff;
  background-color: #444444;
  margin-left: 0px;
  margin-top: 60rpx;
}

.view_goods .view_goods_info .btn_exchange.disabled {
  background-color: #bdbdbd;
}

/* 售罄 */
.view_sold_out_bg {
  background-color: RGBA(0, 0, 0, 0.5);
  width: 240rpx;
  height: 240rpx;
  position:absolute;
  border-radius: 10px;
}

.view_sold_out {
  width: 150rpx;
  height: 150rpx;
  background-color: RGBA(255, 255, 255, 0.8);
  border-radius: 75rpx;
  position:absolute;
  margin-top:46rpx;
  margin-left:46rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 售罄中文文案 */
.view_sold_out .txt_sold_out_zh {
  font-size: 14px;
  color: #333333;
  margin-top: 36rpx;
  margin-bottom: 6rpx;
}

/* 分割线 */
.view_sold_out .view_line {
  width: 80rpx;
  border-bottom: 1px solid #999999;
}

/* 售罄英文文案 */
.view_sold_out .txt_sold_out_en {
  margin-top: 6rpx;
  font-size: 8px;
  color: #999999;
}

/* 选择卡片规格弹窗 */
.view_drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.view_drawer_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2000;
  background-color: #F8F8F8;
  -webkit-border-radius: 10px 10px 0 0; 
  -moz-border-radius: 10px 10px 0 0; 
  border-radius: 10px 10px 0 0; 
}

.drawer_attr_content{
  display: flex;
  flex-direction: column;
}

.view_drawer_head {
  height: 50px;
  background-color: #F8F8F8;
  border-bottom: #EDEDED solid 1px;
  -webkit-border-radius: 10px 10px 0 0; 
  -moz-border-radius: 10px 10px 0 0; 
  border-radius: 10px 10px 0 0; 
}

.txt_head{
  float: left;
  text-align: center;
  line-height: 50px;
  color: #333333;
  font-size: 18px;
  margin-left: 300rpx;
  margin-bottom: 15rpx;
}

.img_cancel{
  float: right;
  height: 20px;
  width: 20px;
  margin-right: 20rpx; 
  margin-top: 30rpx;
}

.view_modal_list_container {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  margin: 30rpx;
}

.view_modal_item{
  height: 120rpx;
  margin: 0rpx 30rpx;
  background-color: #FFFFFF;
}

.view_modal_item.border {
  border-bottom: 1px solid #f5f5f5;
}

.txt_category{
  float: left;
  color: #444444;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  line-height: 120rpx;
}

.txt_content {
  float: right;
  color: #494949;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  line-height: 120rpx;
}

.txt_content.red {
  font-size: 18px;
  color: #dd4d4e;
}

.img_choose{
  float: right;
  height: 40rpx;
  width: 40rpx;
  margin: 30rpx 30rpx 30rpx 0;
}

.cancel {
  height: 50px;
  background-color: #fff !important;
  border-top: 1px solid #eee;
  line-height: 85px;
  margin-top: 15rpx;
}

.cancel button {
  width: 100%;
  height: 50px;
  background-color: #444444;
  font-size: 16px;
  font-weight: 500;
  color: #fff;
  line-height: 50px;
  border-radius: 0 0 0 0;
}