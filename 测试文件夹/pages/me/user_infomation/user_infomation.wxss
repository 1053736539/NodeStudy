/* pages/me/user_infomation/user_infomation.wxss */

page {
  background-color: #F8F8F8;
}

.view_tips {
  width: 100%;
  height: 30px;
  text-align: center;
  color: #fff;
  background-color: #444444;
  font-size: 12px;
  line-height: 30px;
 
}

.view_list{
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_list_item{
  border-radius: 10px;
  height: 50px;
  margin-top: 15px;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_list_item_content{
  height: 50px;
  width: 100%;
}

.txt_title{
  line-height: 50px;
  font-size: 16px;
  float: left;
  color: #999999;
  margin-left: 20px;
}

.text_detail {
  float: right;
  line-height: 50px;
  font-size: 16px;
  color: #333333;
  width: 140px;
  text-align: end;
}

.txt_space {
  line-height: 50px;
  font-size: 16px;
  float: left;
  color: #999999;
  padding-left: 15px;
}

.text_detail_number {
  float: right;
  line-height: 50px;
  font-size: 16px;
  color: #333333;
  margin-right: 20px;
}

.img_arrow_down{
  height: 30px;
  width: 30px;
  float: right;
  margin: 10px 10px;
}

.btn_wechat {
  margin-top: 20px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  color: #666666;
  border-radius: 22px;
  border: 1px solid #666666;
  background-color: #ffffff;
  margin-right: 20px;
}

.img_wechat_logo {
  width: 19px;
  height: 16px;
  float: left;
  margin-top: 13px;
  margin-left: 15px;
}

.txt_wechat {
  font-size: 14px;
  color: #666666;
  margin-left: 8px;
}

.btn_submit {
  margin-top: 70px;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  color: #ffffff;
  width: 260px;
  border-radius: 22px;
  background-color: #333333;
}
