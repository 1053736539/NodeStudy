/* me.wxss */
@import "../../../utils/loginManager/loginMgr.wxss";

/* 未登录占位 */

page {
  background-color: #F8F8F8;
}

/* 会员信息 */
.view_card_info{
  width: auto;
  height: 183px;
  position: absolute;
  top: 15px;
  left: 30rpx;
  right: 30rpx;
  border-radius: 10px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_member_tail{
  height: 50px;
  width: 100%;
  margin-top: 14px;
}

.view_left_tail{
  height: 31px;
  width: 28px;
  float: left;
  margin: 10px 10px 10px 20px;
}

.img_member{
  display: inline-block;
  width: 31px;
  height: 31px;
}

.view_right_tail{
  height: 50px;
  float: left;
  display: flex;
  flex-direction: column;
}

.txt_number{
  display: inline-block;
  height: 28px;
  font-size: 20px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 2px; 
  line-height: 28px;
}

.txt_member{
  display: inline-block;
  height: 20px;
  font-size: 14px;
  line-height: 20px;
  color: #999999;
}

.img_user_info {
  width: 23px;
  height: 18px;
  float: right;
  margin-right: 23px;
  margin-top: 8px;
}


.view_account{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 27px;
  width: 100%;
}

.account_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}

.img_account_item_logo{
  display: inline-block;
  height: 36px;
  width: 36px;
  line-height: 42px;
}

.txt_account_item_data{
  display: inline-block;
  font-size: 16px;
  color:  #666666;
  text-align: center;
}

.txt_account_item_sort{
  display: inline-block;
  font-size: 12px;
  color:  #666666;
}

/* 菜单 */

.view_menu_item{
  width: 690rpx;
  position: absolute;
  top: 198px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_description{
  border-radius: 10px;
  height: 50px;
  margin-top: 15px;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_top_menu,.view_bottom_menu{
  height: 50px;
  width: 100%;
}

.view_top{
  height: 100px;
}

.img_card_left_title{
  margin: 15px 17px 15px 15px;
  float: left;
  height: 20px;
  width: 20px;
  line-height: 50px;
}

.txt_card_center_title{
  line-height: 50px;
  font-size: 16px;
  float: left;
  color: #666666;
}

.txt_center_item{
  width: 35%;
  float: right;
  text-align: right;
  color: #999;
  font-size: 14px;
  line-height: 50px;
  font-weight: 500;
  margin-right: 10rpx;
}

.txt_center_item_discount{
  color: #DD4D4E;
}

.img_arrow_down{
  height: 30px;
  width: 30px;
  float: right;
  margin: 10px 10px;
}

/* 未登录账户信息显示 */
.view_card_info_logout{
  width: auto;
  height: 80px;
  position: absolute;
  top: 15px;
  left: 30rpx;
  right: 30rpx;
  border-radius: 10px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_menu_item_not_login{
  width: 690rpx;
  position: absolute;
  top: 95px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_member_tail_logout{
  height: 50px;
  width: 100%;
  margin-top: 14px;
}

.view_left_tail_logout{
  width: 44px;
  height: 44px;
  float: left;
  margin: 0px 10px 10px 20px;
}

.img_member_logout{
  display: inline-block;
  margin-top: 3px;
  width: 44px;
  height: 44px;
  
}

.view_right_tail_logout{
  height: 50px;
  float: left;
  display: flex;
  flex-direction: column;
}

.txt_number_logout{
  display: inline-block;
  height: 50px;
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 2px; 
  line-height: 50px;
}

/* 联系我们文案 */
.txt_connact_us {
  margin-top: 30px;
  margin-bottom: 10px;
  text-align:center;
  width:100%;
  font-size: 12px;
  color: #999999;
}

.txt_connact_us_logout {
  position: absolute;
  bottom: 10px;
  text-align:center;
  width:100%;
  font-size: 12px;
  color: #999999;
}
