/* pages/me/order/order_tail/order_tail.wxss */

page{
  background-color: #F2F2F2;
}

.container{
  display: flex;
  flex-direction: column;
}

/* 订单商品头部 */

.order_list_head {
  margin: 0px 20px;
  padding: 20px 0;
  background-color: #ffffff;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
  border-radius: 10px;
  margin-left: 30rpx;
  width: 690rpx;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}

.order_list_head .order_list_img {
  width: 160rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  margin-left: 30rpx;
}

.order_list_head .order_list_img .img_container image {
  position: absolute;
  width: 160rpx;
  height: 100rpx;
  border-radius: 5px;
}

.view_right{
  display: flex;
  flex-direction: column;
  width: 480rpx;
}

.order_list_fon_top{
  margin-bottom: 13px;
}

.order_list_fon_bottom{
  display: flex;
  flex-direction: row;
}

.orderBlock {
  float: left;
  color: #333;
  font-size: 16px;
  font-weight: 400;
}

.orderStatus{
  float: right;
  color: #333333;
  font-size: 14px;
  font-weight: 400;
  margin-right: 30rpx;
}

.orderStatus_red{
  color: #FF5656;
}

.orderPrice {
  font-size: 12px;
  color: #999;
  margin-right: 20px;
}

/* 中部、底部显示栏 */

.order_list_bottom{
  border-radius: 10px;
  margin-top: 15px;
  margin-left: 15px;
  margin-bottom: 20px;
  padding-top: 15px;
  padding-bottom: 15px;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_item{
  margin-left: 15px;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  height: 20px;
}

.view_item_center{
  margin-left: 15px;
  margin-top: 15px;
}

.txt_head_left{
  display: inline-block;
  color: #333;
  font-size: 14px;
}

.txt_name_right{
  float: right;
  margin-right: 30rpx;
  color: #999;
  font-size: 14px;
}

.txt_head{
  display: inline-block;
  color: #999999;
  font-size: 14px;
  width: 56px;
  text-align: justify;
}

.txt_head_m{
  display: inline-block;
  margin-right: 20px;
  color: #999999;
  font-size: 14px;
  width: 14px;
}

.txt_head:after{
  content: " "; 
  display: inline-block; 
  width: 100%;
}

.txt_name{
  color: #333;
  font-size: 14px;
}

.text_name_red{
  color:#FF5656;
}

.view_class_name{
  font-size: 16px;
  font-weight: 500;
  margin-top: 0;
  color: #333333;
  width: 630rpx;
  margin-bottom: 13px;
}

.view_line{
  height: 1px;
  border-bottom: 1px solid #F5F5F5;
  margin-bottom: 13px;
  width: 630rpx;
  margin: 0 auto;
}
