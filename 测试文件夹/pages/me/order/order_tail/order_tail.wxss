/* pages/me/order/order_tail/order_tail.wxss */
@import "../../../../utils/loginManager/loginMgr.wxss";
@import "/pages/public/loading.wxss";

page{
  background-color: #F2F2F2;
}

.container{
  display: flex;
  flex-direction: column;
}

/* top */
.order_list_top{
  margin: 0px 20px;
  background-color: #ffffff;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
  border-radius: 10px;
  margin-left: 30rpx;
  width: 690rpx;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}

.txt_top_left{
  display: inline-block;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  line-height: 50px;
  margin-left: 30rpx;
}

.txt_top{
  display: inline-block;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  line-height: 50px;
  margin-left: 30rpx;
}

.txt_top_red{
  color: #FF5656;
}

/* 订单商品头部 */

.view_speclist{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
  border-radius: 10px;
  margin: 0px 20px;
  margin-top: 15px;
  margin-left: 30rpx;
  width: 690rpx;
}

.order_list_head {
  padding: 10px 0;  
  display: flex;
  flex-direction: row;
}

.order_list_head .order_list_img {
  width: 160rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  margin-left: 30rpx;
}

.order_list_head .order_list_img .img_container image {
  position: absolute;
  width: 160rpx;
  height: 100rpx;
  border-radius: 5px;
}

.view_right{
  display: flex;
  flex-direction: column;
  width: 480rpx;
}

.order_list_fon_top{
  margin-bottom: 0px;
}

.order_list_fon_bottom{
  display: flex;
  flex-direction: row;
}

.order_list_fon_bottom_test{
  display: flex;
  flex-direction: row;
}

.orderBlock {
  float: left;
  color: #333;
  font-size: 16px;
  font-weight: 400;
}

.orderStatus{
  float: right;
  color: #333333;
  font-size: 14px;
  font-weight: 400;
  margin-right: 30rpx;
}

.orderStatus_red{
  color: #FF5656;
}

.order_list_fon_bottom .orderPrice {
  font-size: 12px;
  color: #999;
  margin-right: 20px;
}

.order_list_fon_bottom_test .orderPrice{
  font-size: 10px;
  color: #999;
  margin-right: 20px;
}

/* 中部、底部显示栏 */
.order_list_center{
  border-radius: 10px;
  margin-top: 15px;
  margin-left: 15px;
  padding-top: 15px;
  padding-bottom: 15px;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.order_list_bottom{
  border-radius: 10px;
  margin-top: 15px;
  margin-left: 15px;
  margin-bottom: 20px;
  padding-top: 15px;
  padding-bottom: 15px;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_item{
  margin-left: 30rpx;
  margin-top: 15px;
  height: 20px;
  display: flex;
  flex-direction: row;
}

.view_item_center{
  margin-left: 15px;
  margin-bottom: 10px;
}

.txt_head_left{
  display: inline-block;
  color: #333;
  font-size: 14px;
}

.txt_name_right{
  float: right;
  margin-right: 30rpx;
  color: #999;
  font-size: 14px;
}

.txt_head{
  display: inline-block;
  color: #999999;
  font-size: 14px;
  width: 56px;
  text-align: justify;
}

.txt_head_m{
  display: inline-block;
  margin-right: 20px;
  color: #999999;
  font-size: 14px;
  width: 14px;
}

.txt_head:after{
  content: " "; 
  display: inline-block; 
  width: 100%;
}

.txt_name{
  color: #333;
  font-size: 14px;
}

.text_name_red{
  color:#FF5656;
}

.view_class_name{
  font-size: 16px;
  font-weight: 500;
  margin-top: 0;
  color: #333333;
  width: 630rpx;
  margin-bottom: 13px;
  margin-left: 30rpx;
}

.view_line{
  height: 1px;
  border-bottom: 1px solid #F5F5F5;
  width: 630rpx;
  margin: 0 auto;
  margin-bottom: 10px;
}

/* 底部固定栏 总价和购买 */

.view_purchase {
  z-index: 999;
  position: fixed;
  bottom: 0px;
  left: 0px;
  height: 60px;
  width: 100%;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #d8d7d7;
}

.view_purchase .view_amount {
  width: 70%;
  align-self: center;
}

.view_purchase .view_amount .txt_amount_tip {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-left: 15px;
}

.view_purchase .view_amount .txt_amount {
  font-size: 16px;
  color: #dd4d4e;
  font-weight: 500;
}

.view_purchase .btn_purchase {
  width: 160px;
  height: 40px;
  background-color: #444;
  border-radius: 20px;
  text-align: center;
  align-self: center;
  margin-right: 15px;
}

.view_purchase .btn_purchase .txt_purchase {
  color: #fff;
  font-size: 16px;
  line-height: 40px;
}

.view_purchase .btn_purchase.disabled {
  background-color: #999;
}
