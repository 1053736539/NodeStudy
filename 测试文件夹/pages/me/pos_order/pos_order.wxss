/* pages/me/pos_order/pos_order.wxss */
@import "../../public/loading.wxss";

page{
  background-color: #F2F2F2;
}

.clearBox:after {
  content: "";
  display: block;
  clear: both;
}

.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

.img_empty{
  height: 260rpx;
  width: 260rpx;
  margin: 0 auto;
  margin-top: 280rpx;
  text-align: center;
  float: left;
}

.list_container {
  margin-top: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.view_order_item {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_order_top {
  margin-top: 17px;
  margin-left: 15px;
  margin-right: 15px;
}

.img_icon {
  width: 20px;
  height: 20px;
  position: absolute;
  margin-top: 4px;
}

.txt_title {
  font-size: 16px;
  color: #333333;
  margin-left: 30px;
}

.txt_amount {
  font-size: 16px;
  color: #333333;
  float: right;
}

.view_order_bottom {
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 15px;
}

.txt_time {
  font-size: 12px;
  color: #666666;
  padding-left: 30px;
}

.view_space {
  width: 100%;
  height: 20px;
}