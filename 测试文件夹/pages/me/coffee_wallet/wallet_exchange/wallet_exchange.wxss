/* pages/me/coffee_wallet/wallet_exchange/wallet_exchange.wxss */
@import "/pages/public/loading.wxss";

.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 10%;
}

.loading_container>view {
  display: inline-block;
}

.ipt_card {
  border-radius: 10px;
  margin-top: 40px;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 60px;
  padding-left: 10px;
  height: 50px;
  font-size: 16px;
  color: #333333;
  background-color: #F2F2F2;
}

.btn_bind {
  width: 260px;
  height: 44px;
  font-size: 16px;
  line-height: 44px;
  color: #fff;
  background-color: #444444;
  border-radius: 22px;
  margin-bottom: 48px;
}

.text_cmcc_coffee_wallet_exchange{
  display: inline-block;
  font-size: 14px;
  color: #666;
  text-align: center;
  text-decoration: underline;
}

.view_product {
  display: flex;
  flex-direction: column;
  margin-top: 30px;
}

.view_product .txt_product_info {
  font-size: 12px;
  line-height: 20px;
  color: #999;
  margin: 20px;
  margin-top: 0px;
  margin-bottom: 30px;
}

.view_product .txt_instruction {
  border-top: 1px solid #e5e5e5;
  padding-top: 24px;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 12px;
  font-size: 12px;
  color: #333;
}