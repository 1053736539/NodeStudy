.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

.view_loading {
  background: url('data:image/svg+xml;base64,') no-repeat;
  background-size: cover;
  width: 80rpx;
  height: 80rpx;
  -webkit-animation: loading 1s steps(12, end) infinite;
  animation: loading 1s steps(12, end) infinite;
  margin: 0 auto;
  margin-top: 320rpx;
}

@-webkit-keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

@keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

.btn_reloading{
  margin-top: 30px;
  height: 88rpx;
  width: 520rpx;
  background-color: #444444;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 16px;
  line-height: 44px;
}

.img_loading_fail{
  height: 360rpx;
  width: 520rpx;
  margin: 0 auto;
  margin-top: 320rpx;
  text-align: center;
  float: left;
}

.txt_tip_msg{
  align-self: center;
  color: #999999;
  font-size: 12px;
}

.loading {
  padding: 10rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
  align-self: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/svg+xml;base64,') no-repeat;
  background-size: contain;
  -webkit-animation: loading 1s steps(12, end) infinite;
  animation: loading 1s steps(12, end) infinite;
}

.loading.complete:before {
  display: none;
}
