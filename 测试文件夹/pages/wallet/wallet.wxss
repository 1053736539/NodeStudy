/**wallet.wxss**/
@import "../public/loading.wxss";
@import "../../utils/loginManager/loginMgr.wxss";

/* 加载 */

.view_loading{
  align-self: center;
  margin-top: 320rpx;
}

/* 登录后页面内容 */

.separator {
  width: 100%;
  height: 10px;
  background-color: #f2f2f2;
}

.view_header {
  margin-left: 20px;
  margin-bottom: 15px;
  margin-top: 15px;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}

.view_header .img_header {
  width: 18px;
  height: 18px;
  padding-right: 2px;
}

.view_header .txt_title {
  font-size: 14px;
  color: #333;
}

.view_header .txt_more {
  font-size: 12px;
  color: #999999;
  position: absolute;
  right: 20px;
}

.view_header .txt_more .img_right {
  display: block;
  width: 20px;
  height: 20px;
}

.cell_card_flex {
  margin: 0 20px;
  margin-bottom: 10px;
  position: relative;
}

.view_img_container {
  display: inline-block;
  width: 100%;
  position: relative;
  overflow: hidden;
  padding-bottom: 27%;
  height: 0px;
  border-radius: 10px;
}

.view_img_container image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.view_card_disabled{
  position: absolute;
  background-color: #ffffff;
  height: 0;
  overflow: hidden;
  padding-bottom: 27%;
  width:100%;
  z-index: 997;
  opacity: 0.4;
}

.view_ticket_disabled{
  position: absolute;
  background-color: #ffffff;
  height: 100%;
  overflow: hidden;
  /* padding-bottom: 27%; */
  width:100%;
  z-index: 997;
  opacity: 0.4;
}

.view_card_disabled.off {
  background-color: #000000;
}

.bottom_item {
  background-color: #fff;
  position: absolute;
  height: 100px;
  width: 200px;
  top: 50%;
  left: 50%;
  margin-left: -100px;
  margin-top: -50px;
  line-height: 100px;
  text-align: center;
}

.bottom_item text {
  font-size: 24px;
  color: #333;
  font-weight: 900;
}

.view_card_info {
  z-index: 998;
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 20px;
  transform: translateY(50%);
}

.txt_card_title {
  font-size: 20px;
  color: #ffffff;
}

.txt_card_validity {
  font-size: 10px;
  color: #ffffff;
}

/* 券cell */

.cell_ticket {
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 20px;
  margin-bottom: 30px;
  position: relative;
  display: flex;
  background-color: #f9f9f9;
}

.cell_ticket .left_container {
  display: inline-block;
  width: 51%;
  position: relative;
  overflow: hidden;
  padding-bottom: 45%;
  height: 0px;
}

.cell_ticket .left_container .img_ticket {
  position: absolute;
  width: 100%;
  height: 100%;
}

.cell_ticket .right_container {
  width: 49%;
  position: relative;
  overflow: hidden;
}

.status {
  z-index: 999;
  position: absolute;
  right: 0px;
  top: 5px;
  height: 18px;
  width: 44px;
  line-height: 18px;
  text-align: center;
  font-size: 10px;
  color: #fff;
  background-color: #C1A06E;
  border-bottom-left-radius: 9px;
  border-top-left-radius: 9px;
}

.status.disable {
  background-color: #999999;
}

.cell_ticket .right_container .text_container {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 85%;
  display: flex;
  flex-direction: column;
  padding-left: 10px;
  padding-right: 10px;
}

.cell_ticket .right_container .text_container .txt_title {
  font-size: 24px;
  color: #333;
  align-self: center;
}

.cell_ticket .right_container .text_container .txt_title.disable {
  color: #999;
}

.cell_ticket .right_container .text_container .txt_expiry_date {
  font-size: 10px;
  color: #666;
  text-align: center;
}

.cell_ticket .right_container .text_container .txt_expiry_date.disable {
  color: #999;
}