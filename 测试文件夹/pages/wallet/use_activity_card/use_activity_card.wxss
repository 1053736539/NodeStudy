/* pages/wallet/use_activity_card/use_activity_card.wxss */
@import "../../public/loading.wxss";
.list_container {
  display: flex;
  flex-direction: column;
}

.allActivity {
  margin: 0 20px;
  padding-bottom: 30px;
  /* border-bottom: 1px solid #f5f5f5; */
}

.allActivity .header text {
  display: block;
}

.allActivity .header .name {
  margin-bottom: 10px;
  color: #333;
  font-size: 20px;
  font-weight: 900;
}

.allActivity .header .time {
  color: #333;
  font-size: 12px;
}

.allActivity .header .introduction {
  color: #999;
  font-size: 12px;
  margin-bottom: 20px;
}

.buttonBox {
  text-align: center;
  margin-top: 30px;
}

.buttonBox text {
  display: inline-block;
  color: #333;
  font-weight: 500;
  font-size: 20px;
  margin-bottom: 30px;
}

.btn_use {
  width: 260px;
  height: 44px;
  background-color: #fff;
  color: #444444;
  line-height: 44px;
  font-size: 16px;
  border-radius: 22px;
  border: 1px solid #444444;
}

.btn_give {
  font-size: 16px;
  color: #444444;
  margin-top: 20px;
  width: 260px;
  height: 44px;
  background-color: #fff;
  border:1px solid #444444;
  border-radius: 22px;
  line-height: 44px;
}

.discountCardBox {
  position: relative;
  width: 100%;
  margin-top: 30px;
}

.discountCardBox .img {
  display: inline-block;
  width: 100%;
  position: relative;
  overflow: hidden;
  padding-bottom: 63%;
  height: 0px;
}

.discountCardBox .img image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.discountCardBox .scan {
  position: absolute;
  height: 40px;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  bottom: 10rpx;
  text-align: center;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.scan text {
  color: #fff;
  font-size: 14px;
  line-height: 40px;
}

.scan image {
  height: 20px;
  width: 20px;
  vertical-align: middle;
  margin-right: 5px;
}

.view_product {
  display: flex;
  flex-direction: column;
}

.view_product .txt_product_name {
  font-size: 20px;
  font-weight: 500;
  color: #333333;
  margin: 20px;
  margin-top: 30px;
  margin-bottom: 8px;
}

.view_product .txt_product_info {
  font-size: 14px;
  line-height: 20px;
  color: #999;
  margin: 20px;
  margin-top: 0px;
  margin-bottom: 20px;
}

.view_product .time {
  font-size: 14px;
  color: #999999;
  line-height: 20px;
  margin: 20px;
  margin-top: 0px;
  margin-bottom: 30px;
}

.view_product .txt_instruction {
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 12px;
  font-size: 18px;
  font-weight: 500;
  color: #666666;
}

