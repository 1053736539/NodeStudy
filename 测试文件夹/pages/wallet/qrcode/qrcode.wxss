/* pages/wallet/qrcode/qrcode.wxss */
page {
  background-color: #f8f8f8;
}
.view_bg {
  margin:20px 15px;
  background-color: #ffffff;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.13);
  border-radius: 10px;
}

.view_title {
  font-size: 26px;
  font-weight: 500;
  line-height: 26px;
  color: #333;
  text-align: center;
  padding-top: 30px;
}

.view_date {
  font-size: 12px;
  color: #999999;
  line-height: 20px;
  text-align: center;
  padding-top: 15px;
  padding-bottom: 24px;
  margin: 0 15px;
  border-bottom: 1px solid #f8f8f8;
}

.view_qrcode {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_qrcode > canvas {
  width: 500rpx;
  height: 500rpx;
}

.barnum {
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  letter-spacing: 5px;
  white-space: nowrap;
  margin-top: 14px;
}

.view_tips {
  font-size: 12px;
  color: #999;
  line-height: 12px;
  text-align: center;
  margin-bottom: 20px;
}
