/* pages/wallet/card_list/card_list.wxss */
@import "/pages/public/loading.wxss";
/* 加载 */

.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

.view_header {
  height: 34px;
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
}

.view_header .img_header {
  width: 120px;
  height: 34px;
  position: absolute;
}

.view_header .view_text {
  height: 34px;
  position: absolute;
  display: flex;
  left: 20px;
}

.view_header .txt_header_count {
  font-size: 20px;
  color: #ffffff;
  line-height: 34px;
}

.view_header .txt_header {
  font-size: 12px;
  color: #ffffff;
  line-height: 34px;
  padding-left: 4px;
}

/* 卡Cell */
.cell_card_flex {
  margin: 0 20px;
  margin-bottom: 10px;
  position: relative;
}

.view_img_container {
  display: inline-block;
  width: 100%;
  position: relative;
  overflow: hidden;
  padding-bottom: 27%;
  height: 0px;
  border-radius: 10px;
}

.view_img_container image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.view_card_disabled{
  position: absolute;
  background-color: #ffffff;
  height: 0;
  overflow: hidden;
  padding-bottom: 27%;
  width:100%;
  z-index: 997;
  opacity: 0.4;
}

.view_card_disabled.off {
  background-color: #000000;
}

.status {
  z-index: 999;
  position: absolute;
  right: 0px;
  top: 5px;
  height: 18px;
  width: 44px;
  line-height: 18px;
  text-align: center;
  font-size: 10px;
  color: #fff;
  background-color: #C1A06E;
  border-bottom-left-radius: 9px;
  border-top-left-radius: 9px;
}

.status.disable {
  background-color: #999999;
}

.view_card_info {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 20px;
  transform: translateY(50%);
  z-index: 998;
}

.txt_card_title {
  font-size: 20px;
  color: #ffffff;
}

.txt_card_validity {
  font-size: 10px;
  color: #ffffff;
}

.view_check_expire{
  font-size: 14px;
  text-align: center;
  color: #999;
  font-weight: 500;
  align-self: center;
  padding: 0 10px;
  margin-bottom: 25px;
}