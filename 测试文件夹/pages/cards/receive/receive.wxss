/* pages/cards/receive/receive.wxss */
@import "../../public/loading.wxss";
@import "../../../utils/loginManager/loginMgr.wxss";

.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

.view_loading{
  margin: 0 auto;
  margin-top: 320rpx;
}

/* 登录后的页面 */

.img_background {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.img_header {
  width: 750rpx;
  height: 204rpx;
}

.giftCard {
  margin: 80rpx 40rpx 160rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.giftCard .giftCardHeader {
  position: relative;
  display: inline-block;
  height: 0px;
  width: 47%;
  padding-bottom: 27%;
  overflow: hidden;
  margin-top: 5%;
  margin-bottom: 10px;
  align-self: center;
  border-radius: 10px;
}

.giftCard .giftCardHeader image {
  height: 100%;
  width: 100%;
  position: absolute;
}

.giftName {
  text-align: center;
  font-size: 16px;
  color: #333333;
  font-weight: 500;
  margin-bottom: 1px;
}

.giftName.ticket {
  margin-bottom: 5%;
}

.giftName.top {
  margin-top: 25%;
}

.gift_detail {
  margin-bottom: 7%;
  margin-top: 10px;
  text-align: center;
}

.txt_price{
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  color: #DD4D4E;
  margin-right: 20px;
}

.txt_num{
  text-align: center;
  font-size: 14px;
  color: #999999;
}

/* 领卡 */
.view_send_info{
  height: 50px;
  width: 100%;
  margin-top: 14px;
  display: flex;
  flex-direction: row;
}

.view_left_tail{
  height: 31px;
  width: 28px;
  margin: 0 10px 10px 20px;
}
.img_member{
  display: inline-block;
  height: 28px;
  width: 31px;
}

.view_right_tail{
  margin-left: 20rpx;
  margin-right: 40rpx;
  display: flex;
  flex-direction: column;
}

.txt_number{
  display: inline-block;
  height: 28px;
  font-size: 14px;
  color: #333333;
  margin-bottom: 2px; 
  line-height: 28px;
}

.txt_member{
  display: inline-block;
  height: 20px;
  font-size: 14px;
  line-height: 20px;
  color: #333333;
  margin-bottom: 10px;
}

.btn_receive {
  display: block;
  width: 72%;
  height: 44px;
  line-height: 44px;
  background-color: #444444;
  border-radius: 25px;
  color: #FFFFFF;
  font-size: 16px;
  z-index: 998;
}

.view_bottom_tipMsg{
  position:fixed;
  bottom:20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: center;
  z-index: 998;
  width: 63%;
}

.view_tipMsg_top{
  font-size: 14px;
  text-align: center;
  color: #999;
  font-weight: 500;
  align-self: center;
  padding: 0 10px;
  margin-bottom: 5px;
}

.view_tipMsg {
  font-size: 12px;
  text-align: center;
  color: #999;
  align-self: center;
  padding: 0 10px;
}

.giftCard .view_ticket {
  position: relative;
  display: inline-block;
  height: 0px;
  width: 33%;
  padding-bottom: 29%;
  overflow: hidden;
  margin-top: 5%;
  margin-bottom: 10px;
  align-self: center;
}

.giftCard .img_ticket {
  height: 100%;
  width: 100%;
  position: absolute;
}

.separator.bottom {
  margin-top: 7%;
}
