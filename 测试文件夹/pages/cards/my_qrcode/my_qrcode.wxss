/* pages/cards/my_qrcode/my_qrcode.wxss */
@import "../../public/loading.wxss";

page {
  background-color: #F8F8F8;
}

.container{
  display: flex;
  flex-direction: column;
}

/* 会员信息 */
.view_card_info{
  width: 690rpx;
  margin-top: 15px;
  margin-left: 30rpx;
  border-radius: 10px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_member_tail{
  height: 50px;
  width: 100%;
  margin-top: 14px;
}

.view_left_tail{
  height: 31px;
  width: 28px;
  float: left;
  margin: 10px 10px 10px 20px;
}

.img_member{
  display: inline-block;
  width: 31px;
  height: 31px;
}

.view_right_tail{
  height: 50px;
  float: left;
  display: flex;
  flex-direction: column;
}

.txt_number{
  display: inline-block;
  height: 28px;
  font-size: 20px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 2px; 
  line-height: 28px;
}

.view_vip_inf{
  display: flex;
  flex-direction: row;

}

.txt_member{
  display: inline-block;
  height: 20px;
  font-size: 14px;
  line-height: 20px;
  color: #999999;
  margin-right: 10px;
}

.txt_staff{
  display: inline-block;
  height: 20px;
  font-size: 14px;
  line-height: 20px;
  color: #999999;
}

.view_line{
  height: 1px;
  border-bottom: 1px solid #F5F5F5;
  margin: 0 auto;
  margin-bottom: 16px;
  margin-top: 20px;
  width: 630rpx;
}

.view_account{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 17px;
}

.account_item{
  width: 345rpx;
}

.view_center_crl{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img_account_item_logo{
  display: inline-block;
  height: 20px;
  width: 20px;
  margin-left: 34rpx;
  margin-right: 6px;
  line-height: 42px;
}

.txt_account_item_data{
  display: inline-block;
  font-size: 14px;
  color:  #333333;
  font-weight: 400;
  text-align: center;
}

/* 会员码 */
.view_qrcode{
  width: 690rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-bottom: 20px;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
  box-shadow:0 4px 8px RGBA(0, 0, 0, 0.03);
}

.view_barCode {
  margin-top: 40px;
  padding-left: 20px;
  padding-right: 20px;
  display: flex;
  height: 150px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.barnum {
  width: 100%;
  padding-top: 5px;
  padding-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  letter-spacing: 5px;
  white-space: nowrap;
  margin-top: 14px;
  color: #333333;
}

.view_qrcode {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_qrcode > canvas {
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 20px;
}

.txt_description{
  display: inline-block;
  width: 610rpx;
  font-family: PingFangSC;
  font-size:  14px;
  font-weight: 500;
  margin: 0 auto;
  color: #333333;
  margin-bottom: 10px;
}

.txt_tip{
  display: inline-block;
  font-family: PingFangSC;
  width: 610rpx;
  font-weight: 400;
  font-size:  12px;
  margin: 0 auto;
  color: #999999;
  margin-bottom: 40px;
}

.view_refresh{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
}

.img_refresh{
  width: 11px;
  height: 11px;
  margin-right: 3px;
}

.txt_refresh{
  font-size: 12px;
  color: #999999;

}