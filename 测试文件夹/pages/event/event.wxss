/* event.wxss */
@import "/pages/public/loading.wxss";
@import "../../utils/loginManager/loginMgr.wxss";

/* 加载 */

.loading_container {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}

.loading_container>view {
  display: inline-block;
}

page {
  background-color: #fff;
}


.img_level_bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.btn_to_verify {
  font-size: 16px;
  line-height: 44px;
  color: white;
  width: 260px;
  height: 44px;
  background-color: #333;
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 22px;
}

.text_container {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 130px;
  top: 410rpx;
}

.text_survey_container {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 192px;
  top: 328rpx;
}

.content_container {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  margin-right: 20px;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 4px;
  position: relative;
  height: 130px;
}

.content_survey_container {
  height: 192px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.txt_title, .txt_subTitle1, .txt_subTitle2 {
  text-align: center;
  color: white;
  position: relative;
}

.content_container image{
  width: 40px;
  height: 40px;
}

.txt_title {
  font-size: 20px;
  margin-top: 18px;
}

.txt_subTitle1 {
  font-size: 14px;
  margin-top: 14px;
}

.txt_subTitle2 {
  font-size: 14px;
}

.text_tip {
  margin-top: 32px;
  text-align: center;
  font-size: 24px;
  color: white;
  position: relative;
}

.text_tip2 {
  margin-top: 14px;
  font-size: 16px;
  text-align: center;
  color: white;
  position: relative;
}

.specail_tip {
  position: absolute;
  margin: 0;
  top: 49px;
  font-size: 24px;
  width: 100%;
}

/* 海报 */

.img_poster {
  width: 100%;
  height: 100%;
  position: absolute;
}

/* 答题问卷 */

.cell_container {
  position: absolute;
  /* bottom: 50px; */
  left: 5%;
  top: 116rpx;
  width: 90%;
  background-color: rgba(255, 255, 255, 0.8);
  /* border: 1px solid black; */
  border-radius: 10px;
  bottom: 238rpx;
}

.survey_container {
  position: absolute;
  top: 0;
  bottom: 0;
}

.survey_title {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  display: flex;
  flex-direction: column;
  width: 94%;
  text-align: center;
  /* height: 100px; */
  background-color: white;
  padding-left: 3%;
  padding-right: 3%;
}

.label_title {
  margin-top: 30px;
  font-size: 18px;
}

.label_question {
  margin-top: 10px;
  margin-bottom: 15px;
  font-size: 14px;
}

.radio-group {
  display: flex;
  flex-direction: column;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.radio-group .radio {
  margin: 10px 20px;
  display: flex;
  border: 2px solid #333;
  border-radius: 15px;
  font-size: 15px;
  padding: 17px 20px;
  /* align-items: flex-start; */
}

.radio-group .radio label {
  margin: 0 auto;
  text-align: center;
}

.img_selection {
  display: flex;
  flex-shrink: 0;
  margin-right: 10px;
  justify-content: center;
}

.is_checked {
  background-color: #333;
  color: white;
}

.bottom_space {
  height: 15px;
}
